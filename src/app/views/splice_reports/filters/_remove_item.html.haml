= javascript do
  :plain
    $(document).ready(function() {
        $('.remove_item.disabled').tipsy({ fade:true, gravity:'s', delayIn:500, html:true, className:'content-tipsy', title:function() { return $('.hidden-text.hidden').html();} });
    });


= content_for :remove_item do
  - if !@filter.locked?
    = link_to _("Remove Filter"), {:action => "destroy", :controller => "filters"}, :method => :delete, :confirm => _('Are you sure you want to delete this provider?'), :class => "remove_item", :remote=>true
  - else
    .remove_item.disabled
      #{_("Remove Filter")}
    %span.hidden-text.hidden
      .la.content-tipsy
        = _("Blah Blah: ")
