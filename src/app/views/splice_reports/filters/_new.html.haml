= javascript  'widgets/jquery.jeditable.helpers', 'splice_reports/filter_create'

= content_for :title do
  #{_("New Filter")}

= content_for :content do
  .grid_10
  = kt_form_for SpliceReports::Filter.new, :id => "new filter" do |form|
    = form.text_field :name, :label => _("Name:")
    = form.text_field :description, :label => _("Description:")
    = form.select :status, options_for_select(%w(valid invalid insufficient)), {}, {:label => _("Status:"), :size=>1}
    = form.select :satellite_name, options_for_select(%w(sat1 sat2 sat3)), {}, {:label => _("Satellite Server:"), :size=>1}
    = form.select :organizations, options_for_select(@accessible_orgs_hash.invert), {}, {:label=> _("Organizations"), :size=>5} 
    = form.select :hours, options_for_select(%w(4 8 24 48)), {}, {:label => _("Number of Hours:"), :size=>1}
    = form.text_field :start_date, :id => 'datepicker', :label => _("Start Date:")
    = form.text_field :end_date, :id => 'datepicker', :label => _("End Date:")

    = form.select :inactive, options_for_select(%w(1 3 5)), {}, {:label => _("Inactive for Days:"), :size=>1}

    = form.submit _("Save Filter"), :id => :save_filter

= render :template => "layouts/tupane_layout"
