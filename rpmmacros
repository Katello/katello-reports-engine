# This file should be copied to ~/.rpmmacros
# It provides definitions of rpm macros to allowing build the .spec
#
#From https://fedoraproject.org/wiki/Packaging:Ruby?rd=Packaging/Ruby
%gem_dir /opt/rh/ruby193/root/usr/share/gems
%gem_instdir %{gem_dir}/gems/%{gem_name}-%{version}
%gem_libdir %{gem_instdir}/lib
%gem_cache %{gem_dir}/cache/%{gem_name}-%{version}.gem
%gem_spec %{gem_dir}/specifications/%{gem_name}-%{version}.gemspec
%gem_docdir %{gem_dir}/doc/%{gem_name}-%{version}
%gem_extdir_mri %{_libdir}/gems/ruby/%{gem_name}-%{version}

